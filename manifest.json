{

  "manifest_version": 2,
  "name": "Twitch Border",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching twitch.tv.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["app.js"]
    }
  ]
  
}