{
  "manifest_version": 2,
  "name": "Youtube to Clipboard",
  "version": "1.0",
  "description": "Copies a Youtube video's information to the Windows clipboard.",
  "icons": {
    "64": "icons/yt2clip-64.png"
  },
  "permissions": ["tabs", "contextMenus", "clipboardWrite"],
  "background": {
    "scripts": ["app.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yt2clip@example.com"
    }
  },
  "content_scripts": [],
  "browser_action": {
    "default_icon": {
      "64": "icons/yt2clip-64.png"
    }
  }
}